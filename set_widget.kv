<Footer@Title>
    font_size: sp(20)

<ContentLabel@Label>:
    color: color(content_color)
    font_size: sp(30)
    size: self.texture_size
    size_hint_y: None
    markup: True
    #font_name: 'LinLibertine_R.ttf'


<TextSlide@ContentLabel>:
    size_hint_y: 1.5


<TitleLabel@Label>:
    color: color(content_color)
    font_size: sp(45)
    size: self.texture_size
    markup: True

#    size_hint_y: 40
    #font_name: 'LinLibertine_R.ttf'

<ImageLabel@Label>
    color: color(content_color)
    font_size: sp(24)


<CodeLabel@Label>
    code: ''
    #font_name: 'UbuntuMono-R.ttf'
    text: self.code .replace('\t', '?' * 4)
    font_size: sp(20)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            size: self.size
            pos: self.pos

<GraphWidget>:
    id: graph_plot3
    #Graph2:
