<Title@FloatLayout+Label>:
    size_hint_y: None
    height: self.texture_size[1] + sp(20)
    color1: title_color
    font_size: sp(55)
    markup:True
    canvas.before:
        Color:
            rgba: default_color
        Rectangle:
            size: self.size
            pos: self.pos

